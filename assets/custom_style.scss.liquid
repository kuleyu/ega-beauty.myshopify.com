/* Mixin
-----------------------------------------------------------------*/
@mixin borderRadius($prop) {
  -webkit-border-radius: $prop;
  -moz-border-radius: $prop;
  -ms-border-radius: $prop;
  -o-border-radius: $prop;
  border-radius: $prop;
}
@mixin boxShadow($prop) {
  -webkit-box-shadow: $prop;
  -moz-box-shadow: $prop;
  box-shadow: $prop;
}
@mixin transition($prop, $speed, $ease) {
  -webkit-transition: $prop $speed $ease;
  -o-transition: $prop $speed $ease;
  transition: $prop $speed $ease;
}
@mixin transform($prop) {
  -webkit-transform: $prop;
  -ms-transform: $prop;
  -o-transform:$prop;
  transform:$prop;
}
@mixin displayFlex() {
  display: -webkit-flex;
  display: flex;
}
@mixin flex($col) {
  -webkit-flex: $col;
  -moz-flex: $col;
  -ms-flex: $col;
  -o-flex: $col;
  flex: $col;
}

