/*
Header Style 1
-----------------------------------------------------------------*/
#header.style_1 {
  font-size: .875em;
}
#header.style_1,
#header.style_1 #header_wrap, 
#header.style_1 .container { height: 115px; }
#header.style_1 #header_wrap {
  background-color: transparent;
  top: 0;
  @include transition(top, .4s, linear);
}
#header.style_1 #header_wrap:before,
#header.style_1 #header_wrap:after,
#header.style_1 .container:before {
  content: '';
  display: block;
  top: 0;
  position: absolute;
  opacity: 0.4;
  filter: alpha(opacity=40); /* For IE8 and earlier */
  opacity: calc({{ settings.header_bg_opacity }} / 100);
  filter: alpha(opacity= $header_bg_opacity); /* For IE8 and earlier */
}
#header.style_1 #header_wrap:before,
#header.style_1 #header_wrap:after {
  width: 0;
  height: 0;
  border-style: solid;
}
#header.style_1 #header_wrap:before {
  right: calc(1200px + ((100% - 1200px)/2));
  border-width: 0 360px 115px 0;
  border-color: transparent $header_bg_color transparent transparent;
}
#header.style_1 #header_wrap:after {
  left: calc(1200px + ((100% - 1200px)/2));
  border-width: 115px 360px 0 0;
  border-color: $header_bg_color transparent transparent transparent;
}
#header.style_1 .container:before {
  left: 0;
  width: 100%;
  height: 100%;
  background-color: $header_bg_color;
}
#header.style_1 #logo img {
  @include transition(all, .4s, linear);
  max-height: 100px;
}
#header.style_1 .header_top,
#header.style_1 .header_bottom { width: 100%; }
#header.style_1 .header_top { @include transition(margin, .4s, linear); }
#header.style_1.sticky_header #logo { margin-top: 15px; }
