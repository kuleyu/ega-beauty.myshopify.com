var addToCartBtn = EGA.product.addToCartBtn,
    removeItemBtn = EGA.product.removeItemBtn;

//Add To Cart
$(document).on('click', addToCartBtn, function(e) {
  e.preventDefault();
  var formId = $(this).closest('form').attr('id');
  EGA.product.addToCart(formId);
});

