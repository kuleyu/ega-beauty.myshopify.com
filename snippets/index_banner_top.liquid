<div class='container clearfix'>
  <div class='index_banner_top'>
    <div class='row'>
      <div class='col-xs-6' style='background-color: #fafafa'>
        <h3 class='text-right'>
          {{ settings.index_banner_top_title_1 }}
        </h3>
      </div>
      <div class='col-xs-6' style='background-color: {{ settings.primary_color }}'>
        <h3 style='color: #fff;'>
          {{ settings.index_banner_top_title_1 }}
        </h3>
      </div>
    </div>
    <div class='row'>
      <div class='dtable'>
        <div class='dtable_cell left index_banner_top_text'>
          <p >
            {{ settings.index_banner_top_content_1 }}
          </p>
        </div>
        <div class='dtable_cell text-center'>
          <img src='{{ "index_banner_top.jpg" | asset_url }}' alt='{{ page_title }}'/>
        </div>
        <div class='dtable_cell right index_banner_top_text'>
          <p >
            {{ settings.index_banner_top_content_1 }}
          </p>
        </div>
      </div>
    </div>
    <div class='row index_banner_btn_wrapper'>
      <div class='col-xs-6' style='background-color: #fafafa'>
      </div>
      <div class='col-xs-6' style='background-color: {{ settings.primary_color }}'>
        {% if settings.use_banner_top_btn %}
        <a href='{{ settings.banner_top_btn_link }}' class='btn btn_dark'>{{ settings.banner_top_btn_content }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>